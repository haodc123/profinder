<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/bg_row_gray"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/row_del"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:visibility="gone"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_del2" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginRight="5dp">
	    <TextView 
	        android:id="@+id/row_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="3dp"
	        android:singleLine="true"
	        android:layout_gravity="center_vertical"
	        android:textColor="@color/label_global_green" />
	    <TextView 
            android:id="@+id/row_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:textColor="@color/label_global_gray_deep" />
	    <TextView 
            android:id="@+id/row_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:textColor="@color/label_global_gray" />
	    <TextView 
            android:id="@+id/row_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:singleLine="true"
            android:layout_gravity="right"
            android:textColor="@color/label_global_gray" />
    </LinearLayout>
</LinearLayout>
