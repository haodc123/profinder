<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:ads="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/label_global_white" >
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="10dp"
	android:orientation="vertical" >
	
    <!-- Thong tin ca nhan -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >
        <ImageView 
            android:id="@+id/img_st_avatar"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:src="@drawable/no_avatar"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom" />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical" >
            <TextView
	            android:id="@+id/tv_st_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=""
	            android:textSize="@dimen/text_global_big"
	            android:textColor="@color/label_global_green"
	            android:layout_marginTop="5dp" />   
	        <TextView
                android:id="@+id/tv_st_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/label_global_green"
                android:layout_marginTop="5dp" />    
        </LinearLayout>
        
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/label_global_green_light"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <!-- Name -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:weightSum="10" >
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="2.5"
	        android:layout_height="wrap_content"
	        android:text="@string/label_st_name" />
        <EditText 
            android:id="@+id/edt_st_name"
            android:layout_width="0dp"
            android:layout_weight="7.5"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!-- Avatar -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:weightSum="10" >
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:text="@string/label_st_tel" />
        <LinearLayout 
	        android:layout_width="0dp"
            android:layout_weight="7.5"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        <ImageView 
	            android:id="@+id/img_st_avatar_edt"
	            android:layout_width="55dp"
	            android:layout_height="50dp"
	            android:src="@drawable/no_avatar" />
	        <Button 
	            android:id="@+id/bt_st_sl_avatar"
	            android:layout_width="80dp"
	            android:layout_height="30dp"
	            android:layout_marginLeft="30dp"
	            android:text="@string/label_st_select_img"
	            android:textSize="@dimen/text_global_small"
	            android:layout_gravity="center_vertical"
	            android:background="@drawable/bt_schema_green"
	            android:textColor="@color/label_global_white"/>
        </LinearLayout>
    </LinearLayout>
    <!-- Email -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:weightSum="10" >
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:text="@string/label_st_email" />
        <EditText 
            android:id="@+id/edt_st_email"
            android:layout_width="0dp"
            android:layout_weight="7.5"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!-- Tel -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:weightSum="10" >
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:text="@string/label_st_tel" />
        <EditText 
            android:id="@+id/edt_st_tel"
            android:layout_width="0dp"
            android:layout_weight="7.5"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!-- Address -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:weightSum="10" >
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:text="@string/label_st_address" />
        <EditText 
            android:id="@+id/edt_st_address"
            android:layout_width="0dp"
            android:layout_weight="7.5"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/bt_st_update"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:text="@string/bt_st_update"
            android:background="@drawable/bt_schema_green"
            android:textColor="@color/label_global_white" />
    </LinearLayout>
    
    <TextView 
        android:id="@+id/tv_st_bm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_st_update"
        android:textColor="@color/label_global_green" />
    <TextView 
        android:id="@+id/tv_st_chsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/tv_st_chsg"
        android:textColor="@color/label_global_green" />
</LinearLayout>
</ScrollView>