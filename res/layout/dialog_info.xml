<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="40dp"
    android:background="@color/label_global_white">
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:gravity="center_vertical"
	    android:orientation="horizontal"
	    android:background="@drawable/border_bottom"
	    android:weightSum="10" >
	
	    <TextView
	        android:id="@+id/tvTitle"
	        android:layout_width="0dp"
	        android:layout_weight="10"
	        android:layout_height="45dp"
	        android:layout_marginLeft="10dp"
	        android:gravity="center_vertical"
	        android:text=""
	        android:textColor="@color/label_global_green"
	        android:textSize="@dimen/text_global_normal" />
	
	</LinearLayout>

	<ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="45dp"
	    android:layout_marginBottom="45dp">
	    <LinearLayout 
	        android:layout_width="match_parent"
            android:layout_height="wrap_content">
		    <TextView 
		        android:id="@+id/tvContent"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:padding="10dp"
		        android:textColor="@color/label_global_dark"
	            android:textSize="@dimen/text_global_normal"/>
	    </LinearLayout>
	</ScrollView>
	
	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/border_top"
            android:weightSum="2"
            android:gravity="center">
            <Button
                android:id="@+id/btCancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/bt_cancel"
                android:textColor="@color/label_global_green"
                android:textSize="@dimen/text_global_normal"
                android:background="@color/label_global_white"
                android:layout_margin="2dp" />
            <View 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/label_global_gray_bright"/>
            <Button
                android:id="@+id/btGo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/bt_go"
                android:textColor="@color/label_global_green"
                android:textSize="@dimen/text_global_normal"
                android:background="@color/label_global_white"
                android:layout_margin="2dp" />
        </LinearLayout>
</RelativeLayout>